<%- include('partials/header') %>

<main class="container my-16 mx-auto">
    
  <div class="flex flex-col-reverse items-center">
    <div class="justify-self-end">
      <a class="btn mx-4" href="/shop">Catalogue</a>
    </div>
    <div class="flex flex-col separation pb-4 mb-16">
      <h2 class="text-6xl font-extrabold uppercase p-4">Café <%= coffee.name %></h2>        
      <p class="text-2xl px-4 py-2">
        <%= coffee.description %>
      </p>
      <div class="details flex justify-between items-baseline m-4">
        <p class="text-xl">Origine: <strong class="font-bold capitalize"><%= coffee.origin %></strong> </p>
        <p class="btn "><%= coffee.flavor_profile %></p>
      </div>
      <div class="details flex justify-between items-baseline m-4">
        <p class="text-xl">Prix: <strong class="font-bold capitalize"><%= coffee.price %></strong> € le kilo</p>
        <p class="text-xl"><%= coffee.availability %></p>
      </div>        
    </div>
    

    <div class="flex justify-center">
      <img class="max-w-3/4 md:max-w-full m-4" src="/assets/coffees/<%= coffee.img_reference %>.png" alt="café <%= coffee.name %>">
    </div>
  </div>    
</main>

<%- include('partials/footer') %>